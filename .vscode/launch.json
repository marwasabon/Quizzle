    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend\\app\\__init__.py",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
              
                "--host=192.168.1.11",
                "--port=5000"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}